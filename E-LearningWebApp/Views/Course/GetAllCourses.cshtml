@model IEnumerable<E_LearningWebApp.Models.Courses>

@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
    ViewData["Title"] = "GetAllCourses";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css" />

    <title>User Dashboard</title>
    <link rel="stylesheet" href="~/Content/css/courses.css">
    <style>
        section {
            width: 85vw;
        }
        table{
            margin-left: 2vw;
            margin-right: 30vw;
            width: 70vw;
        }
    </style>
</head>

<body>
    <h1>AllCourses</h1>

    <p>
        <a asp-controller="Course" asp-action="CreateCourse">Create New Course</a>
    </p>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.CourseName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CourseCode)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CourseDescription)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CoursePrice)
                </th>
                
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CourseName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CourseCode)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CourseDescription)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CoursePrice)
                    </td>
                   
                    <td>
                        <a asp-controller="Course" asp-action="EditCourses" asp-route-courseid="@item.CourseId">Edit</a>|
                        <a asp-controller="Course" asp-action="GetCourseById" asp-route-courseid="@item.CourseId">View Detail</a>|                    
                        <a asp-controller="Course" asp-action="DeleteCourse" asp-route-courseid="@item.CourseId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>

