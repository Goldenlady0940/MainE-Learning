@using E_LearningWebApp.Areas.Identity.Data;
@using Microsoft.AspNetCore.Identity
@using E_LearningWebApp.Models

@inject SignInManager<E_LearningWebAppUser> SignInManager
@inject UserManager<E_LearningWebAppUser> UserManager

@{
    ViewData["Title"] = "Certificate";
    Layout = null;
    var user = await UserManager.GetUserAsync(User);
}


<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <link rel="stylesheet" href="style.css" />
    <style>
        .certification {
            background-image: url('~/Content/assets/img/bg.jpg');
            background-size: cover;
            background-position: center;
        }

            .certification h1 {
                font-size: 30px;
                color: #008000;
            }

            .certification h2 {
                font-size: 27px;
                color: #008000;
            }

            .certification p {
                font-size: 24px;
                color: #000000;
            }
    </style>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
</head>
<body>

    <button id="btnPdf" class="btn btn-primary">Generate PDF</button>
    <div id="pdfContainer" style="text-align:center;">

        <div class="logo">
            <img src="~/content/logincss/logo.jpg" alt="Institution Logo">
        </div>

        <div class="border"></div>
        <div class="certification">
            <h1>Certification of Completion</h1>
            <p>This is to certify that</p>
            <h2 id="name">@user.FirstName @user.LastName</h2>
            <p>has successfully completed the</p>
            <h2 id="course">Basics of Web Development Course</h2>
            <p>at Temari Learning Institution.</p>
            <br />
            <h4>Thank you for being a part of our Learning System</h4>

        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/html2pdf.js/0.9.3/html2pdf.bundle.js"></script>

    <script type="text/javascript">
        $("#btnPdf").click(function () {
            var element = document.getElementById("pdfContainer");
            html2pdf(element);
        });
    </script>
</body>
</html>
