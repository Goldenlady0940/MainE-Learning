@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - YourAppName</title>

    <!-- Add your CSS styles here -->
    <link rel="stylesheet" href="style.css" />


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
</head>
<body>
    <!-- Your HTML content goes here -->
    <button id="btnPdf" class="btn btn-primary">Generate PDF</button>
    <div id="pdfContainer" style="text-align:center;">
        <!-- ... rest of your HTML content ... -->
        <div id="pspdfkit-header">
            <img class="logo" src="~/css/temari.PNG" />
            <p>Company</p>
        </div>

        <div class="border"></div>
        <div class="page" style="page-break-after: always">
            <div>
                <h1>
                    Certificate<br />
                    of Completion
                </h1>
            </div>

            <div class="form">
                <label for="name" class="label">
                    This certificate is proudly <br />
                    presented to:
                </label>
                <label id="name" class="border-bottom" />Sebrina Abdulrezak</label>
            </div>

            <div>
                <p>For Achievements.</p>
            </div>

            <div class="signer">
                <div class="form signer-item">
                    <label for="date" class="label">Date:</label>
                    <input type="text" id="date" class="border-bottom" value="01/01/2021" />
                </div>

                <img class="form signer-item" src="~/css/ribbon.jpeg" />

                <div class="form signer-item">
                    <label for="signature" class="label">Signature:</label>
                    <label id="name" class="border-bottom" />Sebrina Abdulrezak</label>
                </div>
            </div>
        </div>

        <div class="page" style="page-break-after: always">
            <div>
                <h4>
                    Thank you for being a part of<br />
                    our Learning System!
                </h4>
            </div>
        </div>

        

    </div>

    <script type="text/javascript">
        $("#btnPdf").click(function () {
            var sHtml = $("#pdfContainer").html();
            sHtml = sHtml.replace(/</g, "StrTag").replace(/>/g, "EndTag");
            window.open('../Home/GeneratePdf?html=' + sHtml, '_blank');
        });
    </script>
</body>
</html>
